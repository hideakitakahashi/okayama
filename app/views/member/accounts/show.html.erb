
 <!-- =-=-=-=-=-=-= Main Area =-=-=-=-=-=-= -->
  <div class="main-content-area">

    <!-- =-=-=-=-=-=-= Page Breadcrumb =-=-=-=-=-=-= -->
    <section class="page-title">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-sm-7 col-xs-12 text-left">
            <h1>アカウントページ</h1>
          </div>
          <!-- end col -->
          <div class="col-md-6 col-sm-5 col-xs-12 text-right">
            <div class="bread">
              <ol class="breadcrumb">
                <li><%= link_to 'トップページ', :member_root %>
                </li>
                <li class="active">アカウント</li>
              </ol>
            </div>
            <!-- end bread -->
          </div>
          <!-- end col -->
        </div>
        <!-- end row -->
      </div>
      <!-- end container -->
    </section>

    <!-- =-=-=-=-=-=-= Page Breadcrumb End =-=-=-=-=-=-= -->

    <!-- =-=-=-=-=-=-= User Profile =-=-=-=-=-=-= -->
    <section id="user-profile" class="user-profile parallex">
      <div class="container">
        <!-- Row -->
        <div class="row">

          <div class="col-md-12 col-xs-12 col-sm-12">
            <div class="profile-sec ">
              <div class="profile-head">
                <div class="col-md-6 col-xs-12 col-sm-6 no-padding">
                  <div class="profile-avatar">
                    <span><%= image_tag @member.image, :class => "img-responsive img-circle" %></span>
                    <div class="profile-name">
                    <h3><%= @member.family_name %> <%= @member.given_name %></h3><i><%= @member.family_name_kana %> <%= @member.given_name_kana %></i>
                    <% if @member.shops %>
                    <% @member.shops.each do |m| %>
                      <i><%= m.name %></i>
                      <ul class="social-btns">
                      <li><%= link_to 'ショップ情報確認', [:member, m ], :class => "btn btn-primary btn-lg btn-block" %>
                        </li>
                        </ul>
                        <% end %>

                        <% else %>
                        <ul>
                        <li><%= link_to 'ショップ登録', [:new, @member, :shop], :class => "btn btn-primary btn-lg btn-block" %>
                        </li>
                        <% end %>
                      </ul>
                      
                    </div>
                  </div>
                </div>
                <div class="col-md-6 col-xs-12 col-sm-6 no-padding">
                  <ul class="profile-count">
                    <li><i>email</i><%= @member.email %>
                    </li>
                  </ul>
                  <ul class="profile-connect">
                    <li><%= link_to '基本情報編集', :edit_member_account %>
                    </li>
                    <li><%= link_to 'パスワード編集', :edit_member_password %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <!-- Profile Sec -->
          </div>

        </div>
        <!-- Row End -->
      </div>
      <!-- end container -->
    </section>

    <!-- =-=-=-=-=-=-= User Profile end =-=-=-=-=-=-= -->

  </div>

  

    <section class="section-padding-80">

      <div class="container">
        <!-- Row -->
        <div class="row">

          <div class="col-md-12">

            <div class="timeline-container">
              <ul>
              <% @member.posts.each do |m| %>
                <li>
                  <div class="timeline">
                    <div class="user-timeline">
                      <span>
                      <%= image_tag m.member.image %>
                      </span>
                    </div>
                    <div class="timeline-detail">
                      <div class="timeline-head">
                        <h3><a href=""><%= m.member.family_name %> <%= m.member.given_name %></a><span>投稿日：<%= l m.created_at, format: :short %></span></h3>


                     <div class="col-md-3 col-sm-2 col-xs-12">
                        <ul class="question-statistic">
                          応答コメント：<li class="active"> <a data-toggle="tooltip" data-placement="bottom" data-original-title="Answers"><span><%= m.comments.count %></span></a> 
                          </li>
                        </ul>
                      </div>

                        
                      </div>
                      <div class="timeline-content">
                        <p><%= link_to m.content, [:member, m] %></p>

                      </div>
                    </div>
                  </div>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
