<header>

<%= content_tag(:span, flash.notice, class:'notice') if flash.notice %>
<%= content_tag(:span, flash.alert, class:'alert') if flash.alert %>

<div class="navbar navbar-default">
    <div class="container">
      <!-- header -->
      <div class="navbar-header">
        <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">  <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- logo -->

        <%= link_to member_root_path, :class => "navbar-brand" do %>
        <!--<a href="index.html" class="navbar-brand"></a>-->
        <%= image_tag ("logo.png"), :class => "img-responsive" %>
        <% end %>
<p>消費者コミュニティー in Ushimado</p>
        
        <!-- header end -->
      </div>
      <!-- navigation menu -->
      <div class="navbar-collapse collapse">
        <!-- right bar -->
        <ul class="nav navbar-nav navbar-right">
          <li class="hidden-sm">
          <%= 
           if current_member
           link_to 'ログアウト', :member_session, method: :delete 
           else
           link_to 'ログイン', :member_login
           end
          %>



          </li>
          <li><%= link_to 'アカウント', :member_account if current_member %>
          </li>
          <li> 
          <%= 
           if current_member
           else
           link_to 'メンバー登録', :member_signup
           end
          %>
          </li>
          <li>
            <div class="btn-nav">
            <%= link_to '投稿する', :new_member_post, :class => "btn btn-primary btn-small navbar-btn" %>
            </div>
          </li>
        </ul>
      </div>
      <!-- navigation menu end -->
      <!--/.navbar-collapse -->
    </div>
  </div>
</header>