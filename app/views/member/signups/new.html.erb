

 <!-- =-=-=-=-=-=-= Main Area =-=-=-=-=-=-= -->
  <div class="main-content-area">

    <!-- =-=-=-=-=-=-= Page Breadcrumb =-=-=-=-=-=-= -->
    <section class="page-title">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-sm-7 co-xs-12 text-left">
            <h1>新規アカウント登録</h1>
          </div>
          <!-- end col -->
          <div class="col-md-6 col-sm-5 co-xs-12 text-right">
            <div class="bread">
              <ol class="breadcrumb">
                <li><a href="#">トップページ</a>
                </li>
                <li class="active">アカウント登録</li>
              </ol>
            </div>
            <!-- end bread -->
          </div>
          <!-- end col -->
        </div>
        <!-- end row -->
      </div>
      <!-- end container -->
    </section>

    <!-- =-=-=-=-=-=-= Page Breadcrumb End =-=-=-=-=-=-= -->

    <!-- =-=-=-=-=-=-= Register Form =-=-=-=-=-=-= -->
    <section class="section-padding-80 white" id="register">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">

            <div class="box-panel">

            <p>牛窓の色々な生産者との繋がり<br>助け合う社会の一員になりませんか？<br>皆さんのご参加、おまちしております。</p>

              <p class="text-center margin-top-10"><span class="span-line"></span>
              </p>

              <!-- form login -->
              <%= form_for @member, url: :member_signup do |f| %>
              <form>
                <div class="form-group">
                  <label><%= f.label :family_name, '姓' %></label>
                  <%= f.text_field :family_name, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <label><%= f.label :given_name, '名' %></label>
                  <%= f.text_field :given_name, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <label><%= f.label :family_name_kana, '姓（フリガナ）' %></label>
                  <%= f.text_field :family_name_kana, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <label><%= f.label :given_name_kana, '名（フリガナ）' %></label>
                  <%= f.text_field :given_name_kana, :class => "form-control" %>
                </div>


                <div class="form-group">
                  <label><%= f.label :email, 'メールアドレス' %></label>
                  <%= f.text_field :email, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <label><%= f.label :password, 'パスワード' %></label>
                  <%= f.password_field :password, :class => "form-control" %>
                </div>

                <div class="form-group">
                  <div class="row">

                    <div class="col-xs-12 text-right">

                      <%= link_to '既にアカウントをお持ちの方はこちら', :member_login %>
                      </p>
                    </div>
                  </div>
                </div>
                <%= f.submit '新規登録', :class => "btn btn-primary btn-lg btn-block" %>

              </form>
              <!-- form login -->
              <% end %>

            </div>
          </div>

          <div class="clearfix"></div>
        </div>
      </div>
      <!-- end container -->
    </section>
    <!-- =-=-=-=-=-=-= Register Form End =-=-=-=-=-=-= -->
  </div>