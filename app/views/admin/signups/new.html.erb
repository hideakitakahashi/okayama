

 <!-- =-=-=-=-=-=-= Main Area =-=-=-=-=-=-= -->
  <div class="main-content-area">

    <!-- =-=-=-=-=-=-= Page Breadcrumb =-=-=-=-=-=-= -->
    <section class="page-title">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-sm-7 co-xs-12 text-left">
            <h1>新規管理者登録</h1>
          </div>
          <!-- end col -->
          <!-- end col -->
        </div>
        <!-- end row -->
      </div>
      <!-- end container -->
    </section>

    <!-- =-=-=-=-=-=-= Page Breadcrumb End =-=-=-=-=-=-= -->

    <!-- =-=-=-=-=-=-= Register Form =-=-=-=-=-=-= -->
    <section class="section-padding-80 white" id="register">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">

            <div class="box-panel">

              <p class="text-center margin-top-10"><span class="span-line"></span>
              </p>

              <!-- form login -->
              <%= form_for @admin, url: :admin_signup do |f| %>
              <form>
                <div class="form-group">
                  <label><%= f.label :admin_name, '新規管理ID' %></label>
                  <p>※半角英数でご入力ください。</p>
                  <%= f.text_field :admin_name, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <label><%= f.label :email, '新規メールアドレス' %></label>
                  <%= f.text_field :email, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <label><%= f.label :password, '新規パスワード' %></label>
                  <p>※半角英数でご入力ください。</p>
                  <%= f.password_field :password, :class => "form-control" %>
                </div>

                <div class="form-group">
                  <div class="row">

                    <div class="col-xs-12 text-right">
                      <%= link_to '管理者ログインはこちら', :admin_login %>
                      </p>
                    </div>
                  </div>
                </div>
                <%= f.submit '管理者登録', :class => "btn btn-primary btn-lg btn-block" %>

              </form>
              <!-- form login -->
              <% end %>

            </div>
          </div>

          <div class="clearfix"></div>
        </div>
      </div>
      <!-- end container -->
    </section>
    <!-- =-=-=-=-=-=-= Register Form End =-=-=-=-=-=-= -->
  </div>