<div class="main-content-area">

    <!-- =-=-=-=-=-=-= Page Breadcrumb =-=-=-=-=-=-= -->
    <section class="page-title">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-sm-7 co-xs-12 text-left">
            <h1>メンバー：<%= @member.family_name %> <%= @member.given_name %>さんのショップ情報登録</h1>
          </div>
          <!-- end col -->
          <div class="col-md-6 col-sm-5 co-xs-12 text-right">
            <div class="bread">
              <ol class="breadcrumb">
                <li><a href="#">トップページ</a>
                </li>
                <li class="active">メンバー：<%= @member.family_name %> <%= @member.given_name %>さんのショップ情報登録</li>
              </ol>
            </div>
            <!-- end bread -->
          </div>
          <!-- end col -->
        </div>
        <!-- end row -->
      </div>
      <!-- end container -->
    </section>

    <!-- =-=-=-=-=-=-= Page Breadcrumb End =-=-=-=-=-=-= -->

    <!-- =-=-=-=-=-=-= Register Form =-=-=-=-=-=-= -->
    <section class="section-padding-80 white" id="register">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">

            <div class="box-panel">

            <p>メンバー：<%= @member.family_name %> <%= @member.given_name %>さんのショップ登録です。ここで登録した情報は、トップ画面の分類に振り分けられます。</p>

              <p class="text-center margin-top-10"><span class="span-line"></span>
              </p>

              <!-- form login -->
              <%= form_for [ :admin_member, @shop ] do |f| %>
              <form>
                <div class="form-group">
                  <label><%= f.label :name, 'ショップ名称' %></label>
                  <%= f.text_field :name, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <label><%= f.label :category, 'カテゴリー' %></label>

                  <%= f.select :category, [["", Shop::CATEGORY_NAMES]], :class => "form-control", :prompt => 'お店のカテゴリーをお選び下さい' %>
                </div>
                <div class="form-group">
                  <label><%= f.label :url, 'サイトURL' %></label>
                  <%= f.text_field :url, :class => "form-control" %>
                </div>


                <div class="form-group">
                  <label><%= f.label :email, 'メールアドレス' %></label>
                  <%= f.text_field :email, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <label><%= f.label :phone, '電話番号' %></label>
                  <%= f.phone_field :phone, :class => "form-control" %>
                </div>

                <div class="form-group">
                  <div class="row">


                  </div>
                </div>
                <%= f.submit '新規登録', :class => "btn btn-primary btn-lg btn-block" %>

              </form>
              <!-- form login -->
              <% end %>

            </div>
          </div>

          <div class="clearfix"></div>
        </div>
      </div>
      <!-- end container -->
    </section>
    <!-- =-=-=-=-=-=-= Register Form End =-=-=-=-=-=-= -->
  </div>